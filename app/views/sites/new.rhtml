<h4>Your Site</h4>
<%= form_for(Site.new) do |f| %>
  <%= f.error_messages %>
  <label>Name</label>
  <%= f.text_field :name %>
  <label>Description</label>
  <%= f.text_field :desc %>
  <label>Email</label>
  <%= f.text_field :email %>
  <label>Phone</label>
  <%= f.text_field :phone %>
  <label>Fax</label>
  <%= f.text_field :fax %>
  <label>Address</label>
  <%= f.text_field :address %>
  <%= submit_tag 'Save' %>
